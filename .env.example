# Режим сухого запуску (1 = не відправляти email, лише друк у консоль)
DRY_RUN=1

# Email-відправник (для реальної відправки листів)
FROM_EMAIL=your_email@gmail.com
FROM_EMAIL_APP_PASSWORD=your_gmail_app_password

# Кому відправляти замовлення
SUPPLIER_EMAIL=supplier@example.com

# Параметри моделі попиту
DEFAULT_LEAD_DAYS=2
DEFAULT_SAFETY_DAYS=1
TARGET_DAYS_OF_COVER=3